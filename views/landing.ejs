      </svg>
    </div>

    <!-- Main Heading -->
    <h1 class="text-4xl font-bold text-white font-heading">
      Welcome to <span class="text-green-400">MandiMart</span>
    </h1>

    <!-- Tagline -->
    <p class="text-zinc-400 text-lg">
      A Shopping Experience by the <strong>IIT Mandi</strong> Community
    </p>

    <!-- Buttons -->
    <div class="space-x-4 mt-6">
      <a href="/signup" class="px-6 py-2 bg-blue-600 hover:bg-blue-500 rounded-md text-white font-medium">
        Sign Up
      </a>
      <a href="/login" class="px-6 py-2 bg-green-600 hover:bg-green-500 rounded-md text-white font-medium">
        Login
      </a>
    </div>
  </div>
</body>
</html>
