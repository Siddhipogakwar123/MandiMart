        <script>
            // Function to update favorite button appearance
            function updateFavoriteButton(productId, isFavorite) {
                const buttons = document.querySelectorAll(`[onclick*="'${productId}'"]`);
                buttons.forEach(button => {
                    const svg = button.querySelector("svg");
                    svg.setAttribute("fill", isFavorite ? "red" : "white");
                });
            }

            // Function to toggle favorite
            async function toggleFavorite(productId, productName, productPrice, productLocation, productTime, productImage, button) {
                try {
                    const response = await fetch('/toggle-favorite', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            productId,
                            productName,
                            productPrice,
                            productLocation,
                            productTime,
                            productImage
                        })
                    });

                    const data = await response.json();
                    updateFavoriteButton(productId, data.isFavorite);
                    console.log(data.message);
                } catch (err) {
                    console.error(err);
                }
            }

            // Check and update favorite status on page load
            document.addEventListener('DOMContentLoaded', async () => {
                // Get all product IDs on the page (you might need to adjust this based on your actual structure)
                const productIds = ['1', '2', '3', '4']; // Add all your product IDs here

                for (const productId of productIds) {
                    try {
                        const response = await fetch(`/check-favorite/${productId}`);
                        const data = await response.json();
                        updateFavoriteButton(productId, data.isFavorite);
                    } catch (err) {
                        console.error(`Error checking favorite status for product ${productId}:`, err);
                    }
                }
            });
